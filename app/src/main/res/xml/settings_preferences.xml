<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/settings_title_notification"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="isShowEmptyNotification"
            app:title="@string/settings_showEmptyNotification_title"
            app:summary="@string/settings_showEmptyNotification_summary"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/settings_title_presetEdit"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="isFirstMonday"
            app:title="@string/settings_isFirstMonday_title"
            app:summaryOn="@string/settings_isFirstMonday_summaryOn"
            app:summaryOff="@string/settings_isFirstMonday_summaryOff" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/settings_title_advanced"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="isBuiltinPresetList"
            app:title="@string/settings_builtinPresetList_title"
            app:summary="@string/settings_builtinPresetList_summary"/>

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="isDeveloperFeatures"
            app:title="@string/settings_developerFeatures_title"
            app:summary="@string/settings_developerFeatures_summary"/>
    </PreferenceCategory>
</PreferenceScreen>