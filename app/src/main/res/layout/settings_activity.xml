<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/developerFeatures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Возможности разработчика" />

    <!-- TODO make translatable -->
    <Button
        android:id="@+id/changeScheduleNotifyBeforeTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Начинать уведомлять кода осталось... (в секундах)"
        android:textAllCaps="false" />

    <CheckBox
        android:id="@+id/stopForegroundIsNone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Убирать уведомление когда оно не показывает информацию" />

    <CheckBox
        android:id="@+id/isFirstMonday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Первый день недели поднидельник" />

    <CheckBox
        android:id="@+id/syncGlobalPresetList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Синхронизировать список пресетов с глобальным" />

</LinearLayout>