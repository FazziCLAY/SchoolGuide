<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/activityBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8sp">

        <CheckBox
            android:id="@+id/isNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/checkboxTextColor"
            android:text="@string/settings_isNotification" />

        <Spinner
            android:id="@+id/userNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/settings_userNotificationSinner"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <CheckBox
            android:id="@+id/isVibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/checkboxTextColor"
            android:text="@string/settings_isVibration" />

        <Spinner
            android:id="@+id/selectedLocalSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/settings_selectedLocalSchedule"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/checkUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_checkUpdate" />

        <Button
            android:id="@+id/setDeveloperSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffffff"
            android:text="Устанановить\nрасписание\nразработчика" />
    </LinearLayout>
</ScrollView>