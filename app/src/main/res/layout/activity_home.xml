<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8sp"
    android:background="?attr/activityBackground"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".android.activity.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="50pt"
        android:orientation="vertical">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/lessonsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abc_lessons" />


            <Button
                android:id="@+id/scheduleButton"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/abc_schedules"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/settingsButton"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/abc_settings"
                style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>
</LinearLayout>